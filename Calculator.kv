<Button>
    font_size:32
    size_hint:(0.25,0.25)
<Myload>
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height
        spacing:0.1
        padding:0.2

        #TextInput
        TextInput:
            multiline: False
            id: calc_input
            text:"0"
            size_hint:(1,0.2)
            halign:"right"
            font_size: 65

        TextInput:
            multiline: False
            id: sign
            text: ""
            size_hint: (1,0.1)
            halign:"right"
            font_size:20

        GridLayout:
            cols:4
            rows:6

            Button:
                text:"%"
                on_press: root.presspercent()
            Button:
                text:"CE"
                on_press: root.pressCE()
            Button:
                text:"C"
                on_press: root.pressC()
            Button:
                text:"<="
                on_press: root.pressback()
            Button:
                text:"1/x"
                on_press: root.press1byx()
            Button:
                text:"x²"
                on_press: root.presssquare()
            Button:
                text:"√x"
                on_press: root.pressrootx()
            Button:
                text:"÷"
                on_press: root.pressdivide()
            Button:
                text:"7"
                on_press: root.press7()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"8"
                on_press: root.press8()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"9"
                on_press: root.press9()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"X"
                on_press: root.pressX()
            Button:
                text:"4"
                on_press: root.press4()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"5"
                on_press: root.press5()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"6"
                on_press: root.press6()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"-"
                on_press: root.pressminus()
            Button:
                id: click_one
                text:"1"
                on_press: root.press1()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"2"
                on_press: root.press2()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"3"
                on_press: root.press3()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"+"
                on_press: root.pressadd()
            Button:
                text:"+/-"
                on_press: root.presssignchange()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"0"
                on_press: root.press0()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"."
                on_press: root.pressdot()
                background_color:(77/255.0, 86/255.5, 86/255.5,1)
            Button:
                text:"="
                on_press: root.pressequal()
            
            